Subject: [PATCH 6/9] Add origin and patcher git hash instead of patched git
 hash to version by using env variables which are set in build.sh

Remove scriptus maven plugin, as its no longer needed.
---
 pom.xml | 17 +----------------
 1 file changed, 1 insertion(+), 16 deletions(-)

diff --git a/pom.xml b/pom.xml
index ec0ace3..4687cc1 100644
--- a/pom.xml
+++ b/pom.xml
@@ -75,6 +75,7 @@
         <maven.compiler.source>1.7</maven.compiler.source>
         <maven.compiler.target>1.7</maven.compiler.target>
         <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
+        <describe>git:${project.name}:${project.version}:origin-${origin_commit}-patcher-${patcher_commit}:${build.number}</describe>
     </properties>
 
     <dependencies>
@@ -107,22 +108,6 @@
     <build>
         <plugins>
             <plugin>
-                <groupId>net.md-5</groupId>
-                <artifactId>scriptus</artifactId>
-                <version>0.3.1</version>
-                <configuration>
-                    <format>git:${project.name}:${project.version}:%s:${build.number}</format>
-                </configuration>
-                <executions>
-                    <execution>
-                        <phase>initialize</phase>
-                        <goals>
-                            <goal>describe</goal>
-                        </goals>
-                    </execution>
-                </executions>
-            </plugin>
-            <plugin>
                 <groupId>org.codehaus.mojo</groupId>
                 <artifactId>animal-sniffer-maven-plugin</artifactId>
                 <version>1.13</version>
