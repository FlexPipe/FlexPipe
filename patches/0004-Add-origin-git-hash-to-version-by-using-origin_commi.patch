---
 pom.xml | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/pom.xml b/pom.xml
index 7ebde38..e65170a 100644
--- a/pom.xml
+++ b/pom.xml
@@ -105,7 +105,7 @@
                 <artifactId>scriptus</artifactId>
                 <version>0.3.1</version>
                 <configuration>
-                    <format>git:${project.name}:${project.version}:%s:${build.number}</format>
+                    <format>git:${project.name}:${project.version}:origin-${origin_commit}-patched-%s:${build.number}</format>
                 </configuration>
                 <executions>
                     <execution>
